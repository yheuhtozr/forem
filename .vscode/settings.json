{
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "yaml.customTags": ["!html scalar", "!pl mapping"],
  "i18n-ally.localesPaths": [
    "config/locales",
    "app/javascript/i18n",
    "app/services/languages",
    "public/javascripts/i18n",
    "spec/services/languages",
    "public/packs/media/i18n"
  ]
}
