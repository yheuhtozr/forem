<% _t = "v.dashboard.actions" %>
<div class="block m:hidden px-2">
  <select id="mobile_nav_dashboard" class="crayons-select">
    <option value="/dashboard" <%= "selected" if params[:action] == "show" && (params[:which] == "organization" || params[:which].blank?) %>><%= t("mobile.posts", scope: _t) @user.articles_count %></option>
    <option value="/dashboard/user_followers" <%= "selected" if params[:action] == "followers" %>><%= t("mobile.followers", scope: _t) @user.followers_count %></option>
    <option value="/dashboard/following_tags" <%= "selected" if params[:action] == "following_tags" %>><%= t("mobile.following_tags", scope: _t) @user.following_tags_count %></option>
    <option value="/dashboard/following_users" <%= "selected" if params[:action] == "following_users" %>><%= t("mobile.following_users", scope: _t) @user.following_users_count %></option>
    <option value="/dashboard/following_organizations" <%= "selected" if params[:action] == "following_organizations" %>><%= t("mobile.following_orgs", scope: _t) @user.following_organizations_count %></option>
    <option value="/dashboard/following_podcasts" <%= "selected" if params[:action] == "following_podcasts" %>><%= t("mobile.following_pods", scope: _t) @user.following_podcasts_count %></option>

    <option value="/listings/dashboard"><%= t("listings", scope: _t) %></option>

    <option value="<%= dashboard_analytics_path %>"><%= t("analytics", scope: _t) %></option>

    <% if @organizations && (params[:which].blank? || params[:which] == "organization") %>
      <% @organizations.each do |org| %>
        <option value="<%= dashboard_analytics_org_path(org.id) %>"><%= t "for_org", scope: _t, org: org.name %></option>
      <% end %>
    <% end %>

    <% if policy(:video).new? && policy(:video).enabled? %>
      <option value="<%= new_video_path %>"><%= t("upload", scope: _t) %></option>
    <% end %>
  </select>
</div>
