<div class="block m:hidden px-2">
  <select id="mobile_nav_dashboard" class="crayons-select">
    <option value="/dashboard" <%= "selected" if params[:action] == "show" && (params[:which] == "organization" || params[:which].blank?) %>><%= t.v.actions.mobile.posts @user.articles_count %></option>
    <option value="/dashboard/user_followers" <%= "selected" if params[:action] == "followers" %>><%= t.v.actions.mobile.followers @user.followers_count %></option>
    <option value="/dashboard/following_tags" <%= "selected" if params[:action] == "following_tags" %>><%= t.v.actions.mobile.following_tags @user.following_tags_count %></option>
    <option value="/dashboard/following_users" <%= "selected" if params[:action] == "following_users" %>><%= t.v.actions.mobile.following_users @user.following_users_count %></option>
    <option value="/dashboard/following_organizations" <%= "selected" if params[:action] == "following_organizations" %>><%= t.v.actions.mobile.following_orgs @user.following_organizations_count %></option>
    <option value="/dashboard/following_podcasts" <%= "selected" if params[:action] == "following_podcasts" %>><%= t.v.actions.mobile.following_pods @user.following_podcasts_count %></option>

    <option value="/listings/dashboard">Listings</option>

    <option value="<%= dashboard_analytics_path %>"><%= t.v.dashboard.actions.analytics %></option>

    <% if @organizations && (params[:which].blank? || params[:which] == "organization") %>
      <% @organizations.each do |org| %>
        <option value="<%= dashboard_analytics_org_path(org.id) %>"><%= t.v.dashboard.actions.for_org org: org.name %></option>
      <% end %>
    <% end %>

    <% if policy(:video).new? && policy(:video).enabled? %>
      <option value="<%= new_video_path %>"><%= t.v.dashboard.actions.upload %></option>
    <% end %>
  </select>
</div>
