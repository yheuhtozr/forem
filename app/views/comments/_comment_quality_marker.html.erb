<% _t = "v.comments.quality" %>
<% if decorated_comment.low_quality %>
  <div class="crayons-notice crayons-notice--warning low-quality-comment-marker">
    <%= t("low", scope: _t) %> <a href="/code-of-conduct"><strong><%= t("conduct", scope: _t) %></strong></a>
  </div>
<% end %>

<% if comment.hidden_by_commentable_user %>
  <div class="low-quality-comment-marker comment__quality-marker">
    <%= inline_svg_tag("info.svg", aria: true, class: "crayons-icon mr-2", title: t("hidden.icon", scope: _t)) %>
    <%= t("hidden.text", scope: _t) %>
  </div>
<% end %>
