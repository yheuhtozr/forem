<header class="comment__header">
  <a href="<%= URL.user(comment.user) %>" class="crayons-link crayons-link--secondary flex items-center fw-medium">
    <span class="js-comment-username"><%= comment.user.name %></span>
    <% if commentable_author_is_op?(commentable, comment) %>
      <span class="crayons-tooltip inline-block spec-op-author -mr-2" data-tooltip="<%= get_ama_or_op_banner(commentable) %>">
        <%= inline_svg_tag("small-medal.svg", aria: true, class: "crayons-icon", title: get_ama_or_op_banner(commentable)) %>
      </span>
    <% end %>
  </a>

  <%= render "comments/comment_date", decorated_comment: decorated_comment %>

  <div class="comment__dropdown">
    <button class="dropbtn comment__dropdown-trigger crayons-btn crayons-btn--s crayons-btn--ghost crayons-btn--icon" aria-label="<%= t.v.comments.menu.aria_label %>" aria-haspopup="true">
      <%= inline_svg_tag("small-overflow-horizontal.svg", aria: true, class: "crayons-icon pointer-events-none", title: t.v.comments.menu.icon) %>
    </button>
    <ul class="crayons-dropdown p-1 right-1 s:right-0 s:left-auto fs-base dropdown">
      <li><a href="<%= URL.comment(comment) %>" class="crayons-link crayons-link--block permalink-copybtn" aria-label="<%= t.v.comments.menu.copy.aria_label user: comment.user.name %>" data-no-instant><%= t.v.comments.menu.copy.text %></a></li>
      <li class="comment-actions hidden" data-user-id="<%= comment.user_id %>" data-action="settings-button" data-path="<%= URL.comment(comment) %>/settings" aria-label="<%= t.v.comments.menu.settings.aria_label user: comment.user.name %>"></li>
      <% action = t.v.comments.menu.action[comment.hidden_by_commentable_user ? :unhide : :hide] %>
      <li class="comment-actions hidden" data-action="hide-button" data-commentable-user-id="<%= commentable.user_id %>" data-user-id="<%= comment.user_id %>">
        <a href="#" class="crayons-link crayons-link--block hide-comment" data-hide-type="<%= action.downcase %>" data-comment-id="<%= comment.id %>" aria-label="<%= t.v.comments.menu.action.aria_label action: action, user: comment.user.name %>">
          <%= action %>
        </a>
      </li>
      <li class="mod-actions hidden mod-actions-comment-button" data-path="<%= URL.comment(comment) %>/mod" aria-label="<%= t.v.comments.menu.moderate.aria_label user: comment.user.name %>"></li>
      <li class="report-abuse-link-wrapper" data-path="/report-abuse?url=<%= URL.comment(comment) %>" aria-label="<%= t.v.comments.menu.report.aria_label user: comment.user.name %>"></li>
      <li class="current-user-actions"></li>
    </ul>
  </div>
</header>
