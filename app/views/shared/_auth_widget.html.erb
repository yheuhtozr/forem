<% _t = "v.auth" %>
<div class="crayons-card crayons-card--secondary p-4">
  <h2 class="fs-l fw-bold mb-2">
    <%= render "shared/authentication_title" %>
  </h2>
  <p class="color-base-70 mb-4">
    <% if Settings::Community.tagline.present? %>
      <%= Settings::Community.tagline %>
    <% end %>
  </p>
  <div>
    <a href="<%= sign_up_path(state: "new-user") %>" class="crayons-btn w-100 mb-2" aria-label="<%= t("create.aria_label", scope: _t) %>"><%= t("create.text", scope: _t) %></a>
    <a href="<%= sign_up_path %>" class="crayons-btn crayons-btn--ghost-brand w-100" aria-label="<%= t("login.aria_label", scope: _t) %>"><%= t("login.text", scope: _t) %></a>
  </div>
</div>
