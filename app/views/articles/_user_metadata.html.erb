<div class="user-metadata-details">
  <ul class="user-metadata-details-inner">
      <% if @organization %>
        <% if @organization.location.present? %>
          <li>
            <div class="key">
              <%= t.v.user.org.location %>
            </div>
            <div class="value">
              <%= sanitize @organization.location %>
            </div>
          </li>
        <% end %>
        <% if @organization.company_size.present? %>
          <li>
            <div class="key">
              <%= t.v.user.org.company_size %>
            </div>
            <div class="value">
              <%= @organization.company_size %>
            </div>
          </li>
        <% end %>
        <% if @organization.email.present? %>
          <li>
            <div class="key">
              <%= t.v.user.org.email %>
            </div>
            <div class="value">
              <a href="mailto:<%= sanitize @organization.email %>"><%= sanitize @organization.email %></a>
            </div>
          </li>
        <% end %>
      <% else %>

      <% if @user.email_public && context != "sidebar" %>
        <li>
          <div class="key">
            <%= t.v.user.email %>
          </div>
          <div class="value">
            <a href="mailto:<%= @user.email %>"><%= @user.email %></a>
          </div>
        </li>
      <% end %>
      <% if @user.employment_title.present? %>
        <li>
          <div class="key">
            <%= t.v.user.employment.title %>
          </div>
          <div class="value">
            <%= t.v.user.employment.title(
                  title: @user.employment_title,
                  at_start: tag("span", { class: %w[opacity-50] }, true),
                  at_end: "</span>".html_safe,
                  employer: @user.employer_name,
                  start: @user.employer_url.present? ? tag("a", { href: @user.employer_url, target: "_blank", rel: "noopener" }, true) : "",
                  end: @user.employer_url.present? ? "</a>".html_safe : "",
                ) %>
          </div>
        </li>
      <% end %>
      <% if @user.location.present? %>
        <li>
          <div class="key">
            <%= t.v.user.location %>
          </div>
          <div class="value">
            <%= @user.location %>
          </div>
        </li>
      <% end %>
      <% if @user.education.present? %>
        <li>
          <div class="key">
            <%= t.v.user.education %>
          </div>
          <ul class="value">
            <%= @user.education %>
          </ul>
        </li>
      <% end %>
    <% end %>
    <li>
      <div class="key">
        <%= t.v.user.created_at %>
      </div>
      <div class="value">
        <%= local_date(@user.created_at) %>
      </div>
    </li>
  </ul>
</div>
