<% _t = t.v.articles.delete %>
<div class="crayons-layout crayons-layout--limited-l gap-0">
  <div class="crayons-card crayons-card--secondary text-styles text-styles--secondary text-padding -mb-1 mx-3 m:mx-6 mt-3">
    <%= @article.title %>
  </div>

  <div class="crayons-card text-padding">
    <h1 class="crayons-subtitle-1 mb-2"><%= _t.heading %></h1>
    <p class="fs-l mb-4">
      <%= _t.desc.text(
            action: link_to(@article.published ? _t.desc.unpublish : _t.desc.edit, "#{@article.path}/edit", data: { no_instant: "")
          ) %>
    </p>

    <%= form_tag "/articles/#{@article.id}", method: :delete do %>
      <button class="crayons-btn crayons-btn--danger"><%= _t.action.button %></button>
      <a data-no-instant href="<%= @article.path %>/edit" class="crayons-btn crayons-btn--secondary">
        <%= @article.published ? _t.action.unpublish : _t.action.edit %>
      </a>
      <a data-no-instant href="<%= dashboard_path %>" class="crayons-btn crayons-btn--ghost"><%= _t.action.cancel %></a>
    <% end %>
  </div>
</main>
