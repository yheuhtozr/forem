<% _t = t.v.credits %>
<% title _t.meta.title %>

<div class="credits-container">
  <% if flash[:notice].present? %>
    <div class="notice" id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="existing-credits">
    <div class="existing-credits-status"><%= _t.status @user_unspent_credits_count %></div>
    <a href="<%= purchase_credits_path %>" data-no-instant><%= _t.purchase %></a>

    <%= render "ledger", items: @ledger[["User", current_user.id]] %>
  </div>

  <% if @organizations.present? %>
    <% @organizations.find_each do |org| %>
      <div class="existing-credits">
        <div class="existing-credits-status">
          <%= _t.status.org name: org.name, start: tag("span", { id: "org-credits-number" }, true), count: org.unspent_credits_count, end: "</span>".html_safe %></span>
        </div>
        <a id="org-credits-purchase-link" href="<%= purchase_credits_path(organization_id: org.id) %>" data-no-instant>
          <%= _t.purchase %>
        </a>

        <%= render "ledger", items: @ledger[["Organization", org.id]] %>
      </div>
    <% end %>
  <% end %>

  <% if @user_unspent_credits_count.positive? %>
    <center>
      <p>
        <a href="<%= new_listing_path %>"><%= _t.listing.create %></a>
      </p>
      <p>
        <a href="/listings/dashboard"><%= _t.listing.dashboard %></a>
      </p>
    </center>
  <% end %>
</div>
