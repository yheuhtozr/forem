<% _t = "v.credits" %>
<% title t("meta.title", scope: _t) %>

<div class="credits-container">
  <% if flash[:notice].present? %>
    <div class="notice" id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="existing-credits">
    <div class="existing-credits-status"><%= t "status.user", scope: _t, count: @user_unspent_credits_count %></div>
    <a href="<%= purchase_credits_path %>" data-no-instant><%= t("purchase", scope: _t) %></a>

    <%= render "ledger", items: @ledger[["User", current_user.id]] %>
  </div>

  <% if @organizations.present? %>
    <% @organizations.find_each do |org| %>
      <div class="existing-credits">
        <div class="existing-credits-status">
          <%= t "status.org_html", scope: _t, name: org.name, num: tag.span(org.unspent_credits_count, id: "org-credits-number"), count: org.unspent_credits_count %></span>
        </div>
        <a id="org-credits-purchase-link" href="<%= purchase_credits_path(organization_id: org.id) %>" data-no-instant>
          <%= t("purchase", scope: _t) %>
        </a>

        <%= render "ledger", items: @ledger[["Organization", org.id]] %>
      </div>
    <% end %>
  <% end %>

  <% if @user_unspent_credits_count.positive? %>
    <center>
      <p>
        <a href="<%= new_listing_path %>"><%= t("listing.create", scope: _t) %></a>
      </p>
      <p>
        <a href="/listings/dashboard"><%= t("listing.dashboard", scope: _t) %></a>
      </p>
    </center>
  <% end %>
</div>
